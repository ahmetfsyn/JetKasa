# Build aşaması
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /app

# Solution ve tüm kaynak kodunu kopyala
COPY . .

# Restore
RUN dotnet restore

# Publish (WebAPI projesi)
RUN dotnet publish src/JetKasa.WebAPI/JetKasa.WebAPI.csproj -c Release -o out

# Runtime aşaması
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
COPY --from=build /app/out ./
EXPOSE 5000
ENTRYPOINT ["dotnet", "JetKasa.WebAPI.dll"]
